<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/steam_gradient">

    <!-- Wishlister Logo/Title -->
    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wishlister"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="64dp"/>

    <!-- Steam login button (visual stub) -->
    <Button
        android:id="@+id/btnSteamLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"

        android:background="@drawable/rounded_button"
        android:backgroundTintMode="multiply"
        android:fontFamily="sans-serif-medium"
        android:insetLeft="16dp"
        android:insetRight="16dp"
        android:text="Connect with Steam"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Email login button -->
    <Button
        android:id="@+id/btnEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/steam_accent"
        android:text="Sign in with Email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:insetLeft="16dp"
        android:insetRight="16dp"
        android:background="@drawable/rounded_button"/>

    <!-- Native Wishlister account button -->
    <Button
        android:id="@+id/btnNativeLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/steam_accent"
        android:text="Use Wishlister Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:insetLeft="16dp"
        android:insetRight="16dp"
        android:background="@drawable/rounded_button"/>

</LinearLayout>
